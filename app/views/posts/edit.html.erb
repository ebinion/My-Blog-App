<h1>Edit Post</h1>

<%= form_for @post, :url => upload_post_path(@post.id)  do |f| %>
<p>
	<%= f.label :thumbnail %><br>
	<%= f.file_field :thumbnail %>
</p>
<p>
	<%= f.submit "Update Thumbnail" %>
</p>
<% end %>


<%= form_for @post do |f| %>
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>