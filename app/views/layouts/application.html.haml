!!! 5
%html
	%head
		%title BlogApp
		= stylesheet_link_tag "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		- if admin?
			%p
				Hello, 
				= @logged_in_user.name
				= link_to "log out", session_path, :method => :delete
		
		- if flash[:notice]
			.notice= flash[:notice]
		= yield